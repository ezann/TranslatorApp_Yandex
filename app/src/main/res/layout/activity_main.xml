<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cafdec"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/from_language"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="English" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/swap" />

            <Button
                android:id="@+id/to_language"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_height="38dp"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="Indonesian" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_below="@+id/ll1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fill_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="15dp"
                android:lines="5"
                android:minLines="3"
                android:scrollbars="vertical"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/klikTranslate"
                android:layout_below="@+id/fill_text"
                android:text="Translate!"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/translate_result"
                android:layout_below="@+id/klikTranslate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars = "vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>